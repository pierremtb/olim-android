<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context="com.pierrejacquier.olim.fragments.GoogleConnectFragment"
        android:id="@+id/constraintLayout">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:text="@string/all_set"
            android:textColor="@color/colorPrimaryText"
            android:textSize="35sp"
            app:fontFamily="roboto"
            app:textWeight="light"
            android:layout_height="wrap_content"
            android:id="@+id/robotoTextView"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            android:layout_marginTop="80dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:text="@string/all_set_description"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:layout_height="65dp"
            android:id="@+id/robotoTextView2"
            app:layout_constraintLeft_toLeftOf="@+id/robotoTextView"
            app:layout_constraintTop_toBottomOf="@+id/robotoTextView"
            android:layout_marginTop="24dp"
            app:layout_constraintRight_toRightOf="@+id/robotoTextView" />

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:iiv_color="@color/colorHintText"
            app:iiv_icon="gmd-face"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/robotoTextView2"
            android:layout_marginTop="56dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

    </android.support.constraint.ConstraintLayout>
</layout>
