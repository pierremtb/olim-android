<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="newTask"
            type="com.pierrejacquier.olim.data.Task" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/tasksCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pierrejacquier.olim.fragments.TasksFragment">

        <!-- TasksList -->
        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/tasksNestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/container_margin"
                    android:layout_marginRight="@dimen/container_margin"
                    android:orientation="vertical"
                    android:paddingBottom="80dp">

                    <LinearLayout
                        android:id="@+id/currentTagChipLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/chip_background"
                        android:elevation="2dp"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/currentTagChipIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/background"
                            android:gravity="center"
                            android:src="@drawable/ic_label_outline" />

                        <TextView
                            android:id="@+id/currentTagChipLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginStart="8dp"
                            android:maxLines="1"
                            android:text="#MyTag"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="13sp" />


                        <ImageButton
                            android:id="@+id/currentTagChipIconDelete"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/chip_delete_background"
                            android:gravity="center"
                            android:src="@drawable/ic_clear" />

                    </LinearLayout>

                    <!-- Tasks -->
                    <LinearLayout
                        android:id="@+id/overdueTasksLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/container_margin"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="@dimen/container_margin"
                            android:layout_marginRight="@dimen/container_margin">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/overdue"
                                android:textColor="@color/colorSecondaryText" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/postponeAllOverdueTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/container_margin"
                                    android:contentDescription="@string/postpone_all"
                                    android:src="@drawable/ic_timelapse" />

                                <ImageView
                                    android:id="@+id/markAsDoneAllOverdueTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/done_all"
                                    android:src="@drawable/ic_done_all" />

                            </LinearLayout>

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/overdueTasksCard"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            card_view:cardBackgroundColor="@color/cardsbg"
                            card_view:cardCornerRadius="@dimen/card_corner_radius"
                            card_view:cardElevation="@dimen/cards_elevation">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/overdueTasksRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:scrollbars="none" />

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/todayTasksLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/container_margin"
                        android:layout_marginTop="@dimen/container_margin"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="@dimen/container_margin"
                            android:layout_marginRight="@dimen/container_margin">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/today"
                                android:textColor="@color/colorSecondaryText" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/postponeAllTodayTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/container_margin"
                                    android:contentDescription="@string/postpone_all"
                                    android:src="@drawable/ic_timelapse" />

                                <ImageView
                                    android:id="@+id/markAsDoneAllTodayTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/done_all"
                                    android:src="@drawable/ic_done_all" />

                            </LinearLayout>

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/todayTasksCard"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            card_view:cardBackgroundColor="@color/cardsbg"
                            card_view:cardCornerRadius="@dimen/card_corner_radius"
                            card_view:cardElevation="@dimen/cards_elevation">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/todayTasksRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:scrollbars="none" />

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tomorrowTasksLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/container_margin"
                        android:layout_marginTop="@dimen/container_margin"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="@dimen/container_margin"
                            android:layout_marginRight="@dimen/container_margin">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/tomorrow"
                                android:textColor="@color/colorSecondaryText" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/postponeAllTomorrowTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/container_margin"
                                    android:layout_marginRight="@dimen/container_margin"
                                    android:contentDescription="@string/postpone_all"
                                    android:src="@drawable/ic_timelapse" />

                                <ImageView
                                    android:id="@+id/markAsDoneAllTomorrowTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/done_all"
                                    android:src="@drawable/ic_done_all" />

                            </LinearLayout>

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/tomorrowTasksCard"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            card_view:cardBackgroundColor="@color/cardsbg"
                            card_view:cardCornerRadius="@dimen/card_corner_radius"
                            card_view:cardElevation="@dimen/cards_elevation">


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/tomorrowTasksRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:scrollbars="vertical" />

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inTheNextSevenDaysTasksLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/container_margin"
                        android:layout_marginTop="@dimen/container_margin"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="@dimen/container_margin"
                            android:layout_marginRight="@dimen/container_margin">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/inTheNextSevenDays"
                                android:textColor="@color/colorSecondaryText" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/postponeAllInTheNextSevenDaysTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/container_margin"
                                    android:layout_marginRight="@dimen/container_margin"
                                    android:contentDescription="@string/postpone_all"
                                    android:src="@drawable/ic_timelapse" />

                                <ImageView
                                    android:id="@+id/markAsDoneAllInTheNextSevenDaysTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/done_all"
                                    android:src="@drawable/ic_done_all" />

                            </LinearLayout>

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/inTheNextSevenDaysTasksCard"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            card_view:cardBackgroundColor="@color/cardsbg"
                            card_view:cardCornerRadius="@dimen/card_corner_radius"
                            card_view:cardElevation="@dimen/cards_elevation">


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/inTheNextSevenDaysTasksRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:scrollbars="vertical" />

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/laterTasksLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/container_margin"
                        android:layout_marginTop="@dimen/container_margin"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="@dimen/container_margin"
                            android:layout_marginRight="@dimen/container_margin">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/later"
                                android:textColor="@color/colorSecondaryText" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/postponeAllLaterTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/container_margin"
                                    android:layout_marginRight="@dimen/container_margin"
                                    android:contentDescription="@string/postpone_all"
                                    android:src="@drawable/ic_timelapse" />

                                <ImageView
                                    android:id="@+id/markAsDoneAllLaterTasksImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/done_all"
                                    android:src="@drawable/ic_done_all" />

                            </LinearLayout>

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/laterTasksCard"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            card_view:cardBackgroundColor="@color/cardsbg"
                            card_view:cardCornerRadius="@dimen/card_corner_radius"
                            card_view:cardElevation="@dimen/cards_elevation">


                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/laterTasksRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:scrollbars="vertical" />

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <!-- No-task message -->
                    <LinearLayout
                        android:id="@+id/noTasksLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:layout_width="130dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="120dp"
                            app:iiv_color="@color/colorHintText"
                            app:iiv_icon="gmd-weekend" />

                        <com.devspark.robototextview.widget.RobotoTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/nothing_to_do"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="30sp"
                            app:fontFamily="roboto"
                            app:textWeight="light" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>


        <!-- TaskAdder -->
        <android.support.v7.widget.CardView
            android:id="@+id/taskAdderCard"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:visibility="visible"
            app:layout_behavior="com.pierrejacquier.olim.helpers.TaskAdderBehavior"
            card_view:cardBackgroundColor="@color/cardsbg"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<include layout="@layout/test" android:id="@+id/test" />-->
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/previewTaskLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="81dp">

                    <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="@dimen/container_margin">-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_a_task"
                        android:textColor="@color/colorHintText"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp"
                        android:id="@+id/textView"
                        app:layout_constraintLeft_toLeftOf="@+id/previewTaskLayout"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        tools:layout_constraintLeft_creator="0"
                        app:layout_constraintTop_toTopOf="@+id/previewTaskLayout"
                        android:layout_marginTop="16dp"
                        tools:layout_constraintTop_creator="0" />

                    <ImageView
                        android:id="@+id/newTaskClearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clear"
                        android:tint="@color/colorHintTextNonFaded"
                        tools:layout_editor_absoluteX="336dp"
                        tools:layout_editor_absoluteY="9dp"
                        app:layout_constraintTop_toTopOf="@+id/textView"
                        tools:layout_constraintTop_creator="0"
                        app:layout_constraintRight_toRightOf="@+id/previewTaskLayout"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        tools:layout_constraintRight_creator="0"
                        app:layout_constraintBottom_toBottomOf="@+id/textView"
                        tools:layout_constraintBottom_creator="0" />

                    <!--</RelativeLayout>-->

                    <!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
                    <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
                    <!--xmlns:tools="http://schemas.android.com/tools"-->
                    <!--android:id="@+id/workoutTile"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="72dp"-->
                    <!--android:background="@drawable/background">-->

                    <ImageButton
                        android:id="@+id/newTaskTag"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/user_profile_image_background"
                        android:scaleType="center"
                        android:src="@drawable/ic_label_outline"
                        android:tint="@color/white"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="62dp"
                        app:layout_constraintLeft_toLeftOf="@+id/previewTaskLayout"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        tools:layout_constraintLeft_creator="0"
                        app:layout_constraintTop_toBottomOf="@+id/newTaskClearButton"
                        android:layout_marginTop="16dp"
                        tools:layout_constraintTop_creator="0"
                        app:layout_constraintBottom_toBottomOf="@+id/previewTaskLayout"
                        android:layout_marginBottom="16dp"
                        tools:layout_constraintBottom_creator="0"
                        app:layout_constraintVertical_bias="0.44" />

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="72dp"-->
                    <!--android:layout_marginRight="16dp"-->
                    <!--android:orientation="vertical">-->

                    <TextView
                        android:id="@+id/taskPrimaryText"
                        android:layout_width="218dp"
                        android:layout_height="24dp"
                        android:text="@{newTask.title}"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/list_tile_primary_text"
                        tools:layout_editor_absoluteX="72dp"
                        tools:layout_editor_absoluteY="62dp"
                        app:layout_constraintLeft_toRightOf="@+id/newTaskTag"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        tools:layout_constraintLeft_creator="0"
                        app:layout_constraintTop_toTopOf="@+id/newTaskTag"
                        tools:layout_constraintTop_creator="0"
                        app:layout_constraintBottom_toBottomOf="@+id/newTaskTag"
                        tools:layout_constraintBottom_creator="0"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/taskSecondaryText"
                        android:layout_width="218dp"
                        android:layout_height="16dp"
                        android:text="@{newTask.dispDueDate() + ` ` + newTask.dispDueTime()}"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/list_tile_secondary_text"
                        tools:layout_editor_absoluteX="72dp"
                        tools:layout_editor_absoluteY="86dp"
                        app:layout_constraintLeft_toLeftOf="@+id/taskPrimaryText"
                        tools:layout_constraintLeft_creator="0"
                        app:layout_constraintTop_toBottomOf="@+id/taskPrimaryText"
                        tools:layout_constraintTop_creator="0"
                        app:layout_constraintRight_toRightOf="@+id/taskPrimaryText"
                        tools:layout_constraintRight_creator="0"
                        app:layout_constraintHorizontal_bias="1.0" />
                    <!--</LinearLayout>-->
                    <!--</RelativeLayout>-->
                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        app:iiv_color="@color/colorHintText"
                        app:iiv_icon="gmd-event"
                        android:id="@+id/newTaskChooseDate"
                        tools:layout_editor_absoluteX="344dp"
                        tools:layout_editor_absoluteY="70dp"
                        app:layout_constraintTop_toTopOf="@+id/newTaskTag"
                        tools:layout_constraintTop_creator="0"
                        app:layout_constraintRight_toRightOf="@+id/previewTaskLayout"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        tools:layout_constraintRight_creator="0"
                        app:layout_constraintBottom_toBottomOf="@+id/newTaskTag"
                        tools:layout_constraintBottom_creator="0" />

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="24dp"
                        android:id="@+id/newTaskChooseTime"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        app:iiv_color="@color/colorHintText"
                        app:iiv_icon="gmd-access_time"
                        tools:layout_editor_absoluteX="304dp"
                        tools:layout_editor_absoluteY="70dp"
                        app:layout_constraintTop_toTopOf="@+id/newTaskChooseDate"
                        tools:layout_constraintTop_creator="0"
                        app:layout_constraintRight_toLeftOf="@+id/newTaskChooseDate"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        tools:layout_constraintRight_creator="0"
                        app:layout_constraintBottom_toBottomOf="@+id/newTaskChooseDate"
                        tools:layout_constraintBottom_creator="0" />

                    <include layout="@layout/card_divider"
                        tools:layout_editor_absoluteX="5dp"
                        tools:layout_editor_absoluteY="118dp"
                        android:layout_width="379dp"
                        android:layout_height="7dp"
                        android:id="@+id/include"
                        app:layout_constraintLeft_toLeftOf="@+id/previewTaskLayout"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        tools:layout_constraintLeft_creator="0"
                        app:layout_constraintTop_toBottomOf="@+id/newTaskTag"
                        android:layout_marginTop="16dp"
                        tools:layout_constraintTop_creator="0"
                        app:layout_constraintRight_toRightOf="@+id/previewTaskLayout"
                        tools:layout_constraintRight_creator="0"
                        app:layout_constraintHorizontal_bias="1.0" />
